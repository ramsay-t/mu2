#!/bin/bash

MU2_ROOT=~/Dropbox/mu2

MU2_EBIN=$MU2_ROOT/ebin
WRANGLER_EBIN=$MU2_ROOT/../wrangler/ebin

MU2_COMMAND="mu2_logging_mutations apply_logging $1 $2"

USAGE="Usage: apply_instrumentation <source> <output>"

if test -n "$1" && test -n "$2"; then
    erl -noshell -pa $MU2_EBIN -pa $WRANGLER_EBIN -s $MU2_COMMAND -s init stop
else
    echo $USAGE
fi
